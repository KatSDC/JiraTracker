<section class="hero-unit">
  <h1 style="text-align:center;"><%= @project.project_name %></h1>

  <br/>

  <div>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>Ticket ID</td>
				<td>Name</td>
				<td>Task Type</td>
				<td>Status</td>
				<td>Priority</td>
				<td>Assigned To</td>
			</tr>
		</thead>
		<tbody>
			<% @tickets.each do |ticket| %>
				<% if ticket.project_id == @project.project_id %>
					<tr>
						<td><%= ticket.ticket_id %></td>
						<td><%= link_to ticket.title, ticket %></td>
						<td><%= ticket.task_type %></td>
						<td><%= ticket.status %></td>
						<td><%= ticket.priority %></td>
						<td><%= ticket.assignee %></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
  </div>
</section>