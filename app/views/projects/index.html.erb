<section class="hero-unit">
  <h1 style="text-align:center;">Projects</h1>

  <br/>
  <p>
 	<!-- When submit the form, the view rendered will be the index view of our projects resource -->
  <%= form_tag(projects_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search by Name or ID" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
  </p>
  <div>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>Project ID</td>
				<td>Name</td>
				<td>Number of Issues</td>
			</tr>
		</thead>
		<tbody>
			<% @projects.each do |project| %>
				<tr>
					<td><%= project.project_id %></td>
					<td><%= link_to project.project_name, project %></td>
					<td><%= project.number_issues %></td>
				</tr>
			<% end %>	
		</tbody>
	</table>
	<div class="pagination text-center">
	<%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
	</div>
  </div>
 </section>