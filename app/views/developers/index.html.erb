<section class="hero-unit">
  <h1 style="text-align:center;">Developers</h1>

  <br/>

  <div>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>Name</td>
				<td>Email Address</td>
				<td>Assigned Issues</td>
			</tr>
		</thead>
		<tbody>
			<% @developers.each do |developer| %>
				<tr>
					<td><%= link_to developer.developer_name, developer %></td>
					<td><%= developer.developer_email %></td>
					<td><%= developer.num_tickets %></td>
				</tr>
			<% end %>	
		</tbody>
	</table>
  </div>
 </section>