<section class="hero-unit">
  <h1 style="text-align:center;">Tickets</h1>

  <br/>
  <p>
 	<!-- When submit the form, the view rendered will be the index view of our tickets resource -->
  <%= form_tag(tickets_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search by Title or ID" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
  </p>
  <div>
	<table class="table table-hover bg-info">
		<thead>
			<tr>
				<td>Ticket ID</td>
				<td>Title</td>
				<td>Task Type</td>
				<td>Status</td>
				<td>Priority</td>
			</tr>
		</thead>
		<tbody>
			<% @tickets.each do |ticket| %>
				<tr>
					<td><%= ticket.ticket_id %></td>
					<td><%= link_to ticket.title, ticket %></td>
					<td><%= ticket.task_type %></td>
					<td><%= ticket.status %></td>
					<td><%= ticket.priority %></td>
				</tr>		
			<% end %>	
		</tbody>
	</table>
	<div class="pagination text-center">
	<%= will_paginate @tickets, renderer: BootstrapPagination::Rails %>
	</div>
  </div>
 </section>